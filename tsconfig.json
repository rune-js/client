{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "allowJs": true,
        "outDir": "./dist/",
        "jsx": "react",
        "types": [
            "node"
        ],
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost",
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
